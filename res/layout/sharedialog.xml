    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/facebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/shareButtonPad"
            android:layout_marginLeft="@dimen/shareButtonPad"
            android:layout_marginRight="@dimen/shareButtonPad"
            android:layout_marginTop="@dimen/shareButtonPad"
            android:background="@drawable/share_button_action"
            android:drawableLeft="@drawable/bablrr_share_facebook_icon"
            android:drawablePadding="@dimen/shareDrawPad"
            android:gravity="left|center_vertical"
            android:textSize="22dp"
            android:text="Facebook" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/tweetbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/shareButtonPad"
            android:layout_marginLeft="@dimen/shareButtonPad"
            android:layout_marginRight="@dimen/shareButtonPad"
            android:layout_marginTop="@dimen/shareButtonPad"
            android:background="@drawable/share_button_action"
            android:drawableLeft="@drawable/bablrr_share_twitter_icon_bird"
            android:drawablePadding="@dimen/shareDrawPad"
            android:gravity="left|center_vertical"
            android:textSize="22dp"
            android:text="Twitter" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/emailbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/shareButtonPad"
            android:layout_marginLeft="@dimen/shareButtonPad"
            android:layout_marginRight="@dimen/shareButtonPad"
            android:layout_marginTop="@dimen/shareButtonPad"
            android:background="@drawable/share_button_action"
            android:drawableLeft="@drawable/bablrr_share_email_icon"
            android:drawablePadding="@dimen/shareDrawPad"
            android:gravity="left|center_vertical"
            android:textSize="22dp"
            android:text="Email" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/shareButtonPad"
            android:layout_marginLeft="@dimen/shareButtonPad"
            android:layout_marginRight="@dimen/shareButtonPad"
            android:layout_marginTop="@dimen/shareButtonPad"
            android:background="@drawable/share_button_action"
            android:drawableLeft="@drawable/bablrr_share_filesave_icon"
            android:drawablePadding="@dimen/shareDrawPad"
            android:gravity="left|center_vertical"
            android:textSize="22dp"
            android:text="Save" />
    </TableRow>

</TableLayout>