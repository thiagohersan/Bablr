<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="top"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/inputtextdialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.3"
        android:gravity="top"
        android:hint="Enter text... (100 characters limit)"
        android:imeActionLabel="Encode"
        android:imeOptions="actionDone"
        android:inputType="textShortMessage|textCapSentences|textAutoCorrect|textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:minLines="2" />
    <!-- android:imeOptions="actionGo|actionSend|actionNext|actionDone|flagNoExtractUi" -->

    <Button
        android:id="@+id/encodebutton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:text="encode" />

</LinearLayout>